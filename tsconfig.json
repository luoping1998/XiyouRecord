{
    "compilerOptions": {
      "module": "esnext",
      "target": "es5",
      "removeComments": true,
      "sourceMap": true,
      "jsx": "react",
      "moduleResolution": "node",
      "noImplicitAny": false,
      "allowJs": true,
      "experimentalDecorators": true,
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "baseUrl": "./src",
      "paths": {
        "api": ["api/*"],
        "component": ["component/*"],
        "images": ["images/*"],
        "pages": ["pages/*"],
        "styles": ["styles/*"],
        "types": ["types/*"],
        "@routes": ["routes/*"],
        "utils": ["utils/*"]
      },
      "lib": [
        "dom",
        "es2015"
      ]
    },
    "exclude": [
      "node_modules",
      "dist"
    ],
    "include": [
      "src"
    ]
  }
  